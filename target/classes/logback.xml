<configuration>
    <!-- Console Appender: This will log to the console -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger: This sets the default log level and appenders -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

    <!-- SQL and bind values logging -->
    <logger name="io.ebean.SQL" level="INFO" />

    <!-- Transaction Commit and Rollback events logging -->
    <logger name="io.ebean.TXN" level="INFO" />
</configuration>
