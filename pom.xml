      </dependency>

      <dependency>
          <groupId>com.h2database</groupId>
          <artifactId>h2</artifactId>
          <version>2.2.220</version>
          <scope>provided</scope>
      </dependency>

      <!--      GUI API      -->
      <dependency>
          <groupId>com.github.Mqzn</groupId>
          <artifactId>Lotus</artifactId>
          <version>1.3</version>
      </dependency>

      <!--      Command API      -->
      <dependency>
          <groupId>co.aikar</groupId>
