      </dependency>

      <dependency>
          <groupId>com.github.cryptomorin</groupId>
          <artifactId>kingdoms</artifactId>
          <version>1.16.8.1.1</version>
          <scope>provided</scope>
      </dependency>

      <dependency>
          <groupId>Vehicles</groupId>
          <artifactId>Vehicles</artifactId>
          <scope>system</scope>
          <version>1.0</version>
          <systemPath>${pom.basedir}/Vehicles.jar</systemPath>
      </dependency>

      <dependency>
          <groupId>VehiclesWASD</groupId>
          <artifactId>VehiclesWASD</artifactId>
          <scope>system</scope>
          <version>1.0</version>
          <systemPath>${pom.basedir}/VehiclesWASD.jar</systemPath>
      </dependency>

      <dependency>
          <groupId>com.github.decentsoftware-eu</groupId>
          <artifactId>decentholograms</artifactId>
          <version>2.8.11</version>
          <scope>provided</scope>
      </dependency>

      <dependency>
          <groupId>dev.rosewood</groupId>
          <artifactId>rosestacker</artifactId>
          <version>1.5.28</version>
          <scope>provided</scope>
      </dependency>

      <dependency>
          <groupId>com.github.MilkBowl</groupId>
          <artifactId>VaultAPI</artifactId>
          <version>1.7</version>
          <scope>provided</scope>
      </dependency>

      <dependency>
          <groupId>org.spigotmc</groupId>
          <artifactId>spigot</artifactId>
          <version>1.20.4-R0.1-SNAPSHOT</version>
          <scope>provided</scope>
      </dependency>
  </dependencies>

    <distributionManagement>
        <repository>
            <id>update-dev</id>
            <url>sftp://root@${env.BUILD_IP}/home/earthsmpdev_nowy/plugins</url>
        </repository>
    </distributionManagement>
</project>
